<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B00020"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/warningImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_error_outline_black_24dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warningImg"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:layout_centerHorizontal="true"
            android:text="Belum melengkapi akun!"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Maaf anda harus lengkapi data profile anda"
        android:fontFamily="@font/nunito"/>

    <Button
        android:id="@+id/lengkapiDataBtn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_warning_lengkapi"
        android:layout_gravity="center_horizontal"
        android:text="Lengkapi"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

</LinearLayout>